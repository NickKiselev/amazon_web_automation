<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LoginTestSuite" verbose="1" parallel="tests" thread-count="10">

    <test name="Positive_Login_Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.amazon.tests.login.PositiveLoginTests"/>
        </classes>
    </test>

    <test name="Negative_Login_Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.amazon.tests.login.NegativeLoginTests"/>
        </classes>
    </test>
</suite>